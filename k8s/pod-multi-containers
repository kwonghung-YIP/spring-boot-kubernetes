apiVersion: v1
kind: Service
metadata:
    name: nginx-svc
    labels: 
        app: nginx
spec:
    type: ClusterIP
    ports:
    - port: 80
    selector:
      app: nginx
---
apiVersion: v1
kind: Pod
metadata:
    name: nginx-pod
    labels:
      app: nginx
spec:
    containers:
    - name: nginx-server
      image: nginx:1.17
      ports:
      - containerPort: 80
        name: http
    - name: netshoot
      image: nicolaka/netshoot
      command: ["/bin/sh"]
      args: ["-c", "while true; do sleep 10;done"]
