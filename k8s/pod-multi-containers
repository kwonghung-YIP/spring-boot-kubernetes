apiVersion: v1
kind: Pod
metadata:
    name: nginx-pod
spec:
    containers:
    - name: nginx-server
      image: nginx:1.17
      ports:
      - containerPort: 80
        name: http
    - name: netshoot
      image: nicolaka/netshoot
      command: ["/bin/sh"]
      args: ["-c", "while true; do sleep 10;done"]
